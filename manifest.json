{
    "manifest_version": 3,
    "name": "Popsugar Edit Tools",
    "description": "Add helpful links to Popsugar pages for editorial users",
    "version": "1.0",
    "action": {
        "default_icon": "images/ps-brand-mark.png"
    },
    "icons": {
        "16": "images/ps-brand-mark.png",
        "32": "images/ps-brand-mark.png",
        "48": "images/ps-brand-mark.png",
        "128": "images/ps-brand-mark.png"
    },
    "permissions": [
        "tabs",
        "scripting"
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/toolbar.js"
            ],
            "matches": [
                "https://popsugar.com/*",
                "https://*.popsugar.com/*",
                "https://*.onsugar.com/*",
                "http://dev.popsugar.com:3002/*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://popsugar.com/*",
        "https://*.popsugar.com/*",
        "https://*.onsugar.com/*",
        "http://dev.popsugar.com:3002/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "/images/*"
            ],
            "matches": [
                "https://popsugar.com/*",
                "https://*.popsugar.com/*",
                "https://*.onsugar.com/*",
                "http://dev.popsugar.com:3002/*"
            ]
        }
    ]
}
